<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_red"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_history"
            android:layout_width="10sp"
            android:layout_height="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:contentDescription="@string/aceptar"
            android:src="@drawable/ic_ubic" />

        <TextView
            android:id="@+id/num_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_history"
            android:text=""
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:id="@+id/dir_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text=""
            android:textColor="@color/text_red" />

        <TextView
            android:id="@+id/block_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text=""
            android:textColor="@color/text_red" />

        <TextView
            android:id="@+id/dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text=""
            android:textColor="@color/text_red" />

        <TextView
            android:id="@+id/rat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text=""
            android:textColor="@color/text_red" />

    </LinearLayout>

</LinearLayout>
